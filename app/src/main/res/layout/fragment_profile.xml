<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Fragment_Profile">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F0F0F0"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2B2A2A"
                android:textSize="20sp"
                android:fontFamily="@font/open_sans_light"
                android:layout_gravity="start"
                android:textStyle="italic"
                android:text="@string/profile"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/feed_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/feed_userphoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:maxWidth="80dp"
                    android:maxHeight="80dp" />

                <TextView
                    android:id="@+id/feed_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/feed_userphoto"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/feed_userphoto"
                    android:layout_weight="600"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Jess J"
                    android:textColor="#393939"
                    android:textSize="19dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/feed_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/feed_userphoto"
                    android:text="School of Science, RMIT"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/description"
                    android:layout_width="230dp"
                    android:layout_height="80dp"
                    android:maxWidth="230dp"
                    android:maxHeight="80dp"
                    android:layout_alignTop="@+id/feed_name"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/feed_name"
                    android:text="a brief paragraph of self-statement" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/feed_head"
                android:layout_marginTop="100dp"
                android:orientation="vertical" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/feed_head"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/my_education"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/line1"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    app:srcCompat="@drawable/graterthan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"
                    android:text="@string/my_education"
                    android:textColor="#2B2A2A"
                    android:textSize="8pt" />
            </RelativeLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/my_education"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/my_experience"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/line2"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    app:srcCompat="@drawable/graterthan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"
                    android:text="@string/my_experience"
                    android:textColor="#2B2A2A"
                    android:textSize="8pt" />
            </RelativeLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/my_experience"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/my_post"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/line3"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    app:srcCompat="@drawable/graterthan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"
                    android:text="@string/my_post"
                    android:textColor="#2B2A2A"
                    android:textSize="8pt" />
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>