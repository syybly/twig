<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rmit.twig">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TWIG"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".view.Activity_PostCategory" />

        <activity android:name=".view.Activity_CreateOppo" />
        <activity android:name=".view.Activity_CreateEvent" />
        <activity android:name=".view.Activity_CreateGenralPost" />
        <activity android:name=".view.Activity_Homepage" />
        <activity android:name=".view.AdminWelcomeActivity" />
        <activity android:name=".view.MentorWelcomeActivity" />
        <activity android:name=".view.StudentWelcomeActivity" />
        <activity android:name=".view.ForgetPasswordActivity" />
        <activity android:name=".view.Activity_Preference" />
        <activity android:name=".view.LoginSignupContainer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".service.Service_Location"
            android:enabled="true"
            android:exported="true" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>